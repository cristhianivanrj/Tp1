		System.out.println("Busca nacionalidade: "+ autores.buscaPorNacionalidade("España"));
		
		System.out.println("Busca en Interpretes");		
		System.out.println("Busca nome: "+interpretes.buscaPorNome("Carlos vives"));
		System.out.println("BUsca nacionalidade: "+ interpretes.buscaPorNacionalidade("Colombia"));
		
