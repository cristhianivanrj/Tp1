	public static void main(String[] args) {	
        	
		//Inserir Autores
		
		Autores autores = new Autores();               
        Autor joaquinSabina = new Autor("Joaquin Sabina", "España",1949);
        Autor juanFernando = new Autor("Juan Fernando", "Colombia",1979);        
		autores.inserirAutor(joaquinSabina);		
		autores.inserirAutor(juanFernando);		
		System.out.println("Autores : " + autores);
		


		
		//Inserir Interpretes
		
		Interpretes interpretes = new Interpretes();
		Interprete CarlosVives = new Interprete("Carlos vives", "Colombia",true);
		Interprete AndresCepeda = new Interprete("Andres Cepeda","Colombia",true);		
		interpretes.inserirInterprete(CarlosVives);
