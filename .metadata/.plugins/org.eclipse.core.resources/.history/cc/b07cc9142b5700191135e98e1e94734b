package negocio;

import entidades.Albums;
import entidades.Autor;
import entidades.Album;
import entidades.Autores;
import entidades.Interprete;
import entidades.Interpretes;
import entidades.Musica;
import entidades.Musicas;
import java.util.Collections;
import java.util.Comparator;

public class Sistema {
	/**
	 * @param args
	 * Exemplo Cadastro de Artistas, musicas e albumes
	 * @author cristhian
	 */
	public static void main(String[] args) {	
        	
		//Inserir Autores
		
		Autores autores = new Autores();               
        Autor joaquinSabina = new Autor("Joaquin Sabina", "España",1949);
        Autor juanFernando = new Autor("Juan Fernando", "Colombia",1979);        
		autores.inserirAutor(joaquinSabina);		
		autores.inserirAutor(juanFernando);		
		System.out.println("Autores : " + autores);
		
		//Inserir Interpretes		
		Interpretes interpretes = new Interpretes();
		Interprete CarlosVives = new Interprete("Carlos vives", "Colombia",true);
		Interprete AndresCepeda = new Interprete("Andres Cepeda","Colombia",true);		
		interpretes.inserirInterprete(CarlosVives);
		interpretes.inserirInterprete(AndresCepeda);				
		System.out.println("Interprete :  "+ interpretes);				
		
		// Inserir Musicas		
		Musicas musicas = new Musicas();
		Musica TierraOlvido = new Musica("Tierra del Olvido","3:55 min", juanFernando, CarlosVives);
		Musica BesosUsados = new Musica("Besos Usados","4:20min", joaquinSabina, AndresCepeda);		
		musicas.inserirMusicas(TierraOlvido);
		musicas.inserirMusicas(BesosUsados);
		
		System.out.println("Musicas : "+ musicas);
		
		
		//Inserir Albun		
		Albums albums = new Albums();		
		Album exitos = new Album("Exitos90", "90:19min", 1983, musicas, autores,  interpretes);
		albums.inserirAlbum(exitos);		
		System.out.println("Album: "+ exitos);
		
		//Busca en Autores		
		System.out.println("\nBusca en Autores: ");		
		System.out.println("-> Autor nome: "+ autores.buscaPorNome("Juan Fernando"));				
		System.out.println("-> Autor nacionalidade: "+ autores.buscaPorNacionalidade("España"));
		
		//Busca en Interpretes
		System.out.println("\nBusca en Interpretes");		
		System.out.println("-> Autor nome: "+interpretes.buscaPorNome("Carlos vives"));
		System.out.println("-> Autor nacionalidade: "+ interpretes.buscaPorNacionalidade("Colombia"));
		
		//Ordenar lista
		
		System.out.println("\nOrdenar Lista ");
		System.out.println("Sin Ordenar : "+autores);
		
        java.util.List<Autor> Oautores = autores.getAutoresList();
        Collections.sort(Oautores, new Comparator<Autor>(){
            @Override
            public int compare(Autor a1, Autor a2) {
            	return a1.getNome().compareToIgnoreCase(a2.getNome());                
            }
        });
        
        System.out.println("Lista en Orden: "+autores);
		


	}

}
