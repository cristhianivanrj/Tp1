				artistasBusca.add(artista);
			}
		}
		
		return artistasBusca;
	}
	
	
	public List<Artista> buscaPorNacionalidade(String nacionalidade){
		List<Artista> artistasBusca = new ArrayList<Artista>();
		
		for(Artista artista: this.artistas) {
			if(artista.getNacionalidade() == nacionalidade) {
				artistasBusca.add(artista);
			}
		}
		
		return artistasBusca;
	}
	
	

	@Override
	public String toString() {
		return "Autores [autores=" + autores + "]";
	}



}
