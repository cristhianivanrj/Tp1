package dados;

import java.sql.DriverManager;
import java.sql.SQLException;
import com.mysql.jdbc.Connection;

public class Conexao {
	
	protected static String JDBC_BD 		= "camilaBD";
	protected static String JDBC_HOST 		= "localhost";
    protected static String JDBC_DRIVER   	= "com.mysql.jdbc.Driver";
    protected static String JDBC_URL     	 = "jdbc:mysql://localhost/camilaBD?";
    protected static String JDBC_USER     	= "camila";
    protected static String JDBC_PASSWORD = "camila";
    
    private Connection conn = null; 
    
    public Connection getConexao() {
    	
    	try{
//        	host1=JDBC_HOST;  
//        	usuario=JDBC_USER;
//        	senha= JDBC_PASSWORD;
//        	db= JDBC_BD;
        	
        	 conn = DriverManager.getConnection("jdbc:mysql://"+ this.JDBC_HOST+"/"+ this.JDBC_BD +"?user="+ this.JDBC_USER +"&password="+ this.JDBC_PASSWORD); 
    	}
        catch (SQLException e) { 
        	e.printStackTrace();
        	conn = null; 
        } 
    	
		return conn;     	
    }

}
